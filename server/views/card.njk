{%- macro card(params) -%}
<a href="{{ params.url }}" class="card">
    <div class="card__image">
        {% if params.color %}
            <img class="grow" src="/assets/cards/{{params.color}}-{{params.value}}.png"></img>
        {% else %}
            <img class="grow" src="/assets/cards/{{params.value}}.png"></img>
        {% endif %}
    </div>
</a>
{%- endmacro -%}